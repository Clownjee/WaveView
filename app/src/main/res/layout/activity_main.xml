<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clownjee.waveview.MainActivity">

    <com.clownjee.waveview.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        wave:above_wave_color="@android:color/holo_blue_bright"
        wave:blow_wave_color="@android:color/background_dark"
        wave:middle_wave_color="@android:color/holo_red_light"
        wave:progress="80"
        wave:wave_height="large"
        wave:wave_hz="normal"
        wave:wave_length="middle"/>

</RelativeLayout>
